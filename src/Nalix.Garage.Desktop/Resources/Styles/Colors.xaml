<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Colors -->
    <Color x:Key="PrimaryBackground">#FFFFFF</Color>
    <!-- Trắng -->
    <Color x:Key="SecondaryBackground">#F0F0F0</Color>
    <!-- Xám nhẹ -->
    <Color x:Key="PrimaryTextColor">#000000</Color>
    <!-- Đen -->
    <Color x:Key="SecondaryTextColor">#5F5F5F</Color>
    <!-- Xám đậm -->
    <Color x:Key="ButtonBackground">#FF09A3DC</Color>
    <!-- Xanh biển đậm -->
    <Color x:Key="ButtonHoverColor">#005A9E</Color>
    <!-- Xanh biển đậm hơn khi hover -->
    <Color x:Key="ButtonPressColor">#004578</Color>
    <!-- Xanh biển đậm khi nhấn -->
    <Color x:Key="InputBackground">#FFFFFF</Color>
    <!-- Trắng -->
    <Color x:Key="InputBorder">#CCCCCC</Color>
    <!-- Xám nhạt -->
    <Color x:Key="AccentColor">#FF398FE5</Color>
    <!-- Xanh biển đậm -->

    <!-- Drop Shadow Effect -->
    <DropShadowEffect x:Key="DropShadow" Color="Black" Opacity="0.2" BlurRadius="5" />

    <!-- Brushes -->
    <SolidColorBrush x:Key="PrimaryBackgroundBrush" Color="{DynamicResource PrimaryBackground}" />
    <SolidColorBrush x:Key="SecondaryBackgroundBrush" Color="{DynamicResource SecondaryBackground}" />
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="{DynamicResource PrimaryTextColor}" />
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="{DynamicResource SecondaryTextColor}" />
    <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="{DynamicResource ButtonBackground}" />
    <SolidColorBrush x:Key="ButtonHoverBrush" Color="{DynamicResource ButtonHoverColor}" />
    <SolidColorBrush x:Key="ButtonPressBrush" Color="{DynamicResource ButtonPressColor}" />
    <SolidColorBrush x:Key="InputBackgroundBrush" Color="{DynamicResource InputBackground}" />
    <SolidColorBrush x:Key="InputBorderBrush" Color="{DynamicResource InputBorder}" />
    <SolidColorBrush x:Key="AccentBrush" Color="{DynamicResource AccentColor}" />
</ResourceDictionary>